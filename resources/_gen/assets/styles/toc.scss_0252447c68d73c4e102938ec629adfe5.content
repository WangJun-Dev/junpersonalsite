.TOC{padding:0.75em 1em;margin:1em 0;border:var(--outlinegray) 1px solid;border-radius:5px;background-color:var(--lightgray)}.TOC details summary{cursor:zoom-in;font-family:var(--font-header);color:var(--dark);font-weight:700}.TOC details[open] summary{cursor:zoom-out}.TOC nav>ol{margin-top:1em;margin-bottom:0.5em}.TOC ol{counter-reset:section;list-style-position:outside;padding-left:2em}.TOC li{counter-increment:section;line-height:1.2em;margin:0.3em}.TOC li::marker{content:counters(section, ".") "  ";font-weight:200}.sideTOC{position:sticky;box-sizing:border-box;line-height:1;font-size:12px}.sideTOC details summary{cursor:pointer;font-family:var(--font-header);color:var(--dark);font-weight:700;transition:var(--transition);color:var(--tertiary);opacity:0.5}.sideTOC details summary:hover{color:var(--secondary)}.sideTOC details summary::marker{content:none}.sideTOC details[open] summary{cursor:pointer;color:var(--secondary);margin-bottom:1em;opacity:1}.sideTOC details[open] summary::marker{content:none}.sideTOC nav>ol{margin:0}.sideTOC ol{line-height:unset;box-sizing:border-box;counter-reset:section;list-style-position:outside;list-style:none;padding-left:12px}.sideTOC li{line-height:unset;box-sizing:border-box;counter-increment:section;transition:all 0.3s ease}.sideTOC li a{font-weight:300;color:--var(--gray);padding:0.3em 0;transition:all 0.3s ease;transform:translate(0);display:inline-block;opacity:0.3}.sideTOC li.visible>a{opacity:1;transform:translate(3px);color:var(--secondary)}.sideTOC .toc-marker{position:absolute;top:0;left:0;width:100%;height:100%;z-index:-1}.sideTOC .toc-marker path{transition:all 0.3s ease;stroke:var(--lightgray);opacity:0.8;stroke-width:24;stroke-linecap:butt;stroke-linejoin:bevel}
